extends layout

block content

  h1 #{title}: #{book.title}

  p Author: #{book.Author.name}
  p Summary: #{book.summary}
  p ISBN: #{book.isbn}

  if book_instances.length
    p #[strong Delete the following BookInstances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Book Instances
      dl
        each inst in book_instances
          dt
            a(href=inst.url)= inst.imprint
          dd Status: #{inst.status}
          if inst.due_back_formatted
            dd Due back: #{inst.due_back_formatted}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book.id)

      button.btn.btn-primary(type='submit') Delete
